<section class="section">
  <div class="container">
    <h1 class="title is-1"><%= @post.title %></h1>
    <%= if @post.published_at do %>
    <h2 class="subtitle is-6">Published: <%= format_datetime(@post.published_at) %></h2>
    <% end %>
    <div class="content is-medium">
    <%= raw @post.body %>
    </div>
  </div>
</section>
